@model RegistrationLogin.Data.Models.User
@{
    ViewData["Title"] = "Register";
}

<div class="container justify-content-center registrationForm">

    <form asp-action="RegisterNewUser">

        <div class="form-group col-md">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="First Name" required />
        </div>
        <div class="form-group col-md">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" type="text" class="form-control" id="lastName" placeholder="Last Name" required />
        </div>
        <div class="form-group col-md">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" class="form-control" id="emailAddress" placeholder="Email" required />
        </div>
        <div class="form-group col-md">
            <label asp-for="Age">Age</label>
            <input asp-for="Age" type="number" class="form-control" id="number" placeholder="Age" required />
        </div>
        <div class="form-group col-md">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="text" class="form-control" id="password" required />
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
        <input name="__RequestVerificationToken" type="hidden" value="<token_generated_here>">
    </form>

</div>

<a href="/">Back to Home</a>